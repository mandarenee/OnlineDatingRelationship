<p id="notice"><%= notice %></p>

<h1>Gals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gals.each do |gal| %>
      <tr>
        <td><%= gal.name %></td>
        <td><%= link_to 'Show', gal %></td>
        <td><%= link_to 'Edit', edit_gal_path(gal) %></td>
        <td><%= link_to 'Destroy', gal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

